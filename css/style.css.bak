body{
	background-color:#bbb;
	text-align:center;
	margin-top:50px;
}
.chart{
	background-color:#eee;
	box-shadow:0px 3px 5px 5px #999;
}
.frag{
	fill:red;
	stroke:none;	
}
.y line{
	stroke:none;
}
.d3-tip {
  line-height: 2;
  font-weight: bold;
  padding: 12px;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 2px;
}
h1{
	margin-bottom:10px;
}
h2{
	font-size:25px;
	margin:0px;
	font-weight:300
}
h3{
	font-size:12px;
	line-height:20px;
	margin:0px;
	font-weight:100
}
.ptitle{
	position:absolute;
	top:50px;
	left:40%;
	text-align:center;
}